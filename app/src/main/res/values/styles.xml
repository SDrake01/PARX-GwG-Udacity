<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ParxActionBar</item>
    </style>

    <style name="ParxTitleText" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>
    <style name="ParxCardText" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_card</item>
    </style>

    <style name="ParxActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/ParxActionBarTitle</item>
    </style>
    <style name="ParxActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_actionbar</item>
    </style>
    <style name="ParxBodyText" parent="ParxTitleText">
        <item name="android:textColor">@color/colorBodyText</item>
    </style>

</resources>
